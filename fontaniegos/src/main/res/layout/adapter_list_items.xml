<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Large Text"
        android:id="@+id/textTituloListItems"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgItemList"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:maxLines="3"
        android:ellipsize="end"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textDateListItems"
        android:paddingTop="2dp"
        android:paddingLeft="8dp"
        android:layout_alignBottom="@+id/imgItemList"
        android:layout_toRightOf="@+id/imgItemList"
        android:layout_marginBottom="3dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgItemList"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/fondo_generico2"
        android:scaleType="centerCrop" />
</RelativeLayout>